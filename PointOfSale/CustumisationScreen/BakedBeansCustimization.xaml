<UserControl x:Class="CowboyCafe.PointIOfSale.CustumisationScreen.BakedBeansCustimization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CowboyCafe.PointIOfSale.CustumisationScreen"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock FontSize="40">Customize these Beans!</TextBlock>
        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <CheckBox IsChecked="{Binding Path=Size}">Small</CheckBox>
                <CheckBox IsChecked="{Binding Path=Size}">Medium</CheckBox>
                <CheckBox IsChecked="{Binding Path=Size}">Large</CheckBox>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>
