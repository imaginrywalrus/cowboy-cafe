<UserControl x:Class="PointOfSale.CustumisationScreen.CowpokeChiliCustumization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.CustumisationScreen"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <StackPanel>
        
        <TextBlock FontSize="40">Customize this Chili!</TextBlock>
        <StackPanel>
            <CheckBox IsChecked="{Binding Path=Cheese}">Cheese</CheckBox>
            <CheckBox IsChecked="{Binding Path=SourCream}">Sour Cream</CheckBox>
            <CheckBox IsChecked="{Binding Path=GreenOnions}">Green Onion</CheckBox>
        </StackPanel>
    </StackPanel>
</UserControl>
